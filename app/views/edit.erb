<form action="/recipes/<%= @recipe.id %>" method="post">
<input type="hidden" value="patch" name="_method"

<h1>Edit Recipe</h1>

<label for="name">Name:</label><br>
<input type="text" id="name" name="recipe[name]" value="<%= @recipe.name %>"><br>

<label for="ingredients">Ingredients:</label><br>
<input type="text" id="ingredients" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"><br>

<label for="cook_time">Cook Time:</label><br>
<input type="text" id="cook_time" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"><br>

<input type="submit" id="submit" value="submit">




</form>
