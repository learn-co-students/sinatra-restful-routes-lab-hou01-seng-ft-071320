<h1> Edit Recipe </h1>

<form action="/recipes/<%= @recipe.id %>" method="post">

  <input type="hidden" value="patch" name="_method"

  <label for="name">Name:</label><br>
  <input type="text" id="name" name="name" value="<%= @recipe.name %>"><br>

  <label for="ingredients">Ingredients:</label><br>
  <input type="text" id="ingredients" name="ingredients" value="<%= @recipe.ingredients %>"><br>

  <label for="cook_time">Cook Time:</label><br>
  <input type="text" id="cook_time" name="cook_time" value="<%= @recipe.cook_time %>"><br>

  <input type="submit" name="submit" value="Edit Recipe">
</form>